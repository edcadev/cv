---
const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 32px;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  h2 {
    font-weight: 700;
    line-height: 1.75rem;
    font-size: 1.25rem;
  }
</style>
