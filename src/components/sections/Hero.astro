---
import { Image } from "astro:assets";
import { basics } from "@cv";

import Section from "@components/Section.astro";
import WorldMap from "@assets/icons/WorldMap.astro";
import Location from "@assets/icons/Location.astro";
import IconAnchor from "@components/IconAnchor.astro";
import Mail from "@assets/icons/Mail.astro";
import Phone from "@assets/icons/Phone.astro";
import GitHub from "@assets/icons/GitHub.astro";
import LinkedIn from "@assets/icons/LinkedIn.astro";
import X from "@assets/icons/X.astro";

const { name, label, image, url, location, profiles, phone, email } = basics;
const { country, city, countryCode, link } = location;

const SOCIAL_ICONS: Record<string, any> = {
  GitHub,
  LinkedIn,
  X,
};
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <p>{label}</p>

      <div class="location">
        <a href={link} target="_blank" rel="noopener noreferrer">
          <Location />
          {city}, {country}, {countryCode}
        </a>
      </div>

      <footer>
        {
          url && (
            <IconAnchor
              href={url}
              title={`Visitar la página web de ${name}`}
              icon={WorldMap}
            />
          )
        }

        {
          email && (
            <IconAnchor
              href={`mailto:${email}`}
              title={`Enviar un correo electrónico a ${name} al correo ${email}`}
              icon={Mail}
            />
          )
        }

        {
          phone && (
            <IconAnchor
              href={`tel:${phone}`}
              title={`Llamar a ${name} al teléfono ${phone}`}
              icon={Phone}
            />
          )
        }

        {
          profiles.length > 0 &&
            profiles.map(({ network, username, url }) => {
              const Icon = SOCIAL_ICONS[network];
              return (
                <IconAnchor
                  href={url}
                  title={`Visitar la página de ${username} en ${network}`}
                  icon={Icon}
                />
              );
            })
        }
      </footer>
    </div>

    <div class="image">
      <Image src={image} alt="{name}" inferSize />
    </div>
  </div>
</Section>

<style>
  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 0.25rem;
  }

  .info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .info p {
    font-size: 0.875rem;
    line-height: 1.25rem;
    max-width: 28rem;
  }

  .location {
    font-size: 0.75rem;
    line-height: 1rem;
  }

  .location a {
    display: inline-flex;
    vertical-align: baseline;
    gap: 0.375rem;
  }

  .location a:hover {
    text-decoration-line: underline;
  }

  .image {
    position: relative;
    width: 7rem;
    height: 7rem;
    border-radius: 0.75rem;
    overflow: hidden;
    display: flex;
    flex-shrink: 0;
  }

  .image img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  footer {
    display: flex;
    gap: 0.25rem;
    margin-top: 6px;
  }
</style>
